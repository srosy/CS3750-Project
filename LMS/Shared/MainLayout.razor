                <footer class="text-center"><img class="footer-image" alt="WSU Home Page" src="https://www.weber.edu/ui/images/footer-logo.svg"><br /><small class="text-white">&copy;Copyright 2021 All Rights Reserved</small></footer>
            </div>*@
    </div>
}

@code {
    private bool _sessionValid;
    private Role Role;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _sessionValid = await SessionObj.VerifySession(AzureDb, Storage);
            if (!_sessionValid)
            {
                NavMan.NavigateTo("sessionexpired");
            }
            else
            {
                var acct = await DbService.GetAccount(AzureDb, (await SessionObj.GetSession(AzureDb, Storage)).AccountId);
                Role = (Role)acct.Role;
            }
        }
        StateHasChanged();
    }
}
