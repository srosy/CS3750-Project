    <script type="text/javascript">
        //https://www.highcharts.com/demo/box-plot
        function SetupAssignmentChart(index, title, series, median, pointsPossible, score) {
            Highcharts.chart(index, {
                chart: {
                    type: 'boxplot'
                },
                title: {
                    text: title
                },
                legend: {
                    enabled: false
                },
                xAxis: {
                    categories: ['1'],
                    title: {
                        text: ''
                    }
                },
                yAxis: {
                    title: {
                        text: 'Scores'
                    },
                    max: pointsPossible,
                    plotLines: [{
                        value: median,
                        color: 'red',
                        width: 2,
                        label: {
                            text: 'Avearge Score: ' + median,
                            align: 'left',
                            style: {
                                color: 'red'
                            }
                        }
                    },
                    {
                        value: score,
                        color: 'blue',
                        width: 2,
                        label: {
                            text: 'Your Score: ' + score,
                            align: 'right',
                            style: {
                                color: 'blue'
                            }
                        }
                    }]
                },
                series: [{
                    name: '',
                    data: [
                        series
                    ],
                    tooltip: {
                        headerFormat: '<em>Details</em><br/>'
                    }
                }]
            });
        }
    </script>
