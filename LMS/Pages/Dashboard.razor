@page "/dashboard"

<h3 class="header-default">Dashboard</h3>

@if (_loading)
{
    <h4 class="header-default">Loading...</h4>
}

@code {

    private bool _loading = true;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Setup();
        }
    }

    private async Task Setup()
    {
        // do stuff
        _loading = false;
        StateHasChanged();
    }
}
