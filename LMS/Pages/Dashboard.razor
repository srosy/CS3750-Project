@page "/dashboard"

@if (_loading)
{
    <h4 class="header-default">Loading...</h4>
}
else
{
    <div class="row">
        <div class="col-md-9">
            <h3 class="header-default header-inline">Dashboard</h3>
        </div>
        <div class="col-md-3">
            <ProfileInfo Account="@_account" />
        </div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-md-8 text-center">
            &nbsp;
        </div>
        <div class="col-md-4 text-right">
            <RegistrationInfo Account="@_account" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 text-center">
            &nbsp;
        </div>

        @if (_account.Role == (int)Role.STUDENT)
        {
            <div class="col-md-4 text-right">
                <BalanceInfo Account="@_account" />
            </div>
        }
    </div>

}


@code {

    private bool _loading = true;
    private Account _account;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Setup();
        }
    }

    private async Task Setup()
    {
        _account = await DbService.GetAccount(AzureDb, (await SessionObj.GetSession(AzureDb, Storage)).AccountId);
        _loading = false;
        StateHasChanged();
    }
}
